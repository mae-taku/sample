<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- Mppperとxmlのマッピング -->
<mapper namespace="com.example.demo.hello.UserMapper">
<!-- ユーザー1件検索 -->
	<select id="search" resultType="com.example.demo.hello.domain.user.entity.IdSearch">
	SELECT * FROM employee WHERE id = #{id}
	</select>
<!-- ユーザー1件登録 -->	
	<insert id="order">
	insert into employee(
	id
	, name
	, age
	)
	values (
	#{id}
	, #{name}
	, #{age}
	)
	</insert>
</mapper>